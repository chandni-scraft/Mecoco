

{% liquid
  assign product_resource = closest.product
  if request.visual_preview_mode and product_resource == blank
    assign product_resource = collections.all.products.first
  endif
-%}

{% if block.settings.show_variant_price or block.settings.show_per_gram_price %}
  {% if block.settings.use_simple_weight %}
    {% render 'variant-picker-simple-weight', product_resource: product_resource, block: block %}
  {% else %}
    {% render 'variant-picker-with-price', product_resource: product_resource, block: block %}
  {% endif %}
{% else %}
  {% render 'variant-main-picker', product_resource: product_resource, block: block %}
{% endif %}

{% schema %}
{
  "name": "t:names.product_variant_picker",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "t:content.resource_reference_product_variant_picker"
    },
    {
      "type": "paragraph",
      "content": "t:content.edit_variants_in_theme_settings"
    },
    {
      "type": "select",
      "id": "variant_style",
      "label": "t:settings.style",
      "options": [
        {
          "value": "dropdowns",
          "label": "t:options.dropdowns"
        },
        {
          "value": "buttons",
          "label": "t:options.buttons"
        }
      ],
      "default": "buttons"
    },
    {
      "type": "checkbox",
      "id": "show_swatches",
      "label": "t:settings.swatches",
      "default": true
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "t:settings.alignment",
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "show_variant_price",
      "label": "Show price in variants",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_per_gram_price",
      "label": "Show per gram pricing",
      "default": false
    },
    {
      "type": "text",
      "id": "weight_metafield",
      "label": "Weight metafield",
      "info": "Enter the metafield key that contains variant weight (e.g., 'custom.weight_grams')",
      "default": "custom.weight_grams"
    },
    {
      "type": "select",
      "id": "weight_unit",
      "label": "Weight unit stored in metafield",
      "options": [
        {
          "value": "g",
          "label": "Grams"
        },
        {
          "value": "kg",
          "label": "Kilograms"
        },
        {
          "value": "mg",
          "label": "Milligrams"
        }
      ],
      "default": "g"
    },
    {
      "type": "select",
      "id": "price_per_unit",
      "label": "Display price per",
      "options": [
        {
          "value": "g",
          "label": "Per gram"
        },
        {
          "value": "kg",
          "label": "Per kilogram"
        },
        {
          "value": "100g",
          "label": "Per 100g"
        }
      ],
      "default": "g"
    },
    {
      "type": "checkbox",
      "id": "use_simple_weight",
      "label": "Use Shopify's built-in weight field",
      "info": "Enable this if custom metafields aren't working. Uses the weight from the Shipping section.",
      "default": false
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "t:names.product_variant_picker",
      "category": "t:categories.product"
    }
  ]
}
{% endschema %}
