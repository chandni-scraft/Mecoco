  assign product_resource = closest.product
  if request.visual_preview_mode and product_resource == blank
    assign product_resource = collections.all.products.first
  endif
-%}

{% if block.settings.show_variant_price or block.settings.show_per_gram_price %}
  {% if block.settings.use_simple_weight %}
    {% render 'variant-picker-simple-weight', product_resource: product_resource, block: block %}
  {% else %}
    {% render 'variant-picker-with-price', product_resource: product_resource, block: block %}
  {% endif %}
{% else %}
  {% render 'variant-main-picker', product_resource: product_resource, block: block %}
{% endif %}

