{% doc %}
  @prompt
    i need a hero section that will be a slider, we'll be able to add more slides to it. each slide will have two input fields, one for desktop & one for mobile. keep some padding all around the slider of about 15-20 pixels. make sure the view is optimized for mobile as well, we'll be uploading a different banner for mobile, make the entire slide clickable, so it goes to the link we input for each slider., make the number of slides to 7, and put it as an autoslider, give me controls of the time delay of the slider to auto scroll, decrease the empty space of padding around the section please
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding: {{ block.settings.slider_padding }}px;
    overflow: hidden;
  }

  .ai-hero-slider-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.slider_height_desktop }}px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-hero-slider-track-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  .ai-hero-slide-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-slide-link-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 4;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .ai-hero-slide-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-hero-slide-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-hero-slide-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-hero-slide-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: center;
    color: {{ block.settings.text_color }};
    max-width: 600px;
    padding: 20px;
    pointer-events: none;
  }

  .ai-hero-slide-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  .ai-hero-slide-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 16px;
    text-transform: uppercase;
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
  }

  .ai-hero-slide-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0 0 24px;
    opacity: 0.9;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-hero-slide-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 700;
    text-transform: uppercase;
    transition: all 0.3s ease;
    font-family: {{ settings.type_accent_font.family }}, {{ settings.type_accent_font.fallback_families }};
    pointer-events: auto;
    position: relative;
    z-index: 5;
  }

  .ai-hero-slide-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-hero-slider-controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 6;
  }

  .ai-hero-slider-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-hero-slider-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    transform: scale(1.2);
  }

  .ai-hero-slider-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(255, 255, 255, 0.8);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 6;
    transition: all 0.3s ease;
  }

  .ai-hero-slider-nav-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
    transform: translateY(-50%) scale(1.1);
  }

  .ai-hero-slider-nav-prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-hero-slider-nav-next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 12px 20px;
    border-radius: 8px;
    font-size: 14px;
    text-align: center;
    z-index: 3;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-slider-container-{{ ai_gen_id }} {
      height: {{ block.settings.slider_height_mobile }}px;
    }

    .ai-hero-slide-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-hero-slide-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.8 }}px;
    }

