

{% liquid
  assign product = closest.product
-%}

{% capture children %}
  {% comment %} Ensure gallery and core info render in expected order {% endcomment %}
  {% content_for 'block', type: '_product-card-gallery', id: 'product-card-gallery', closest.product: product, collection: collection %}
  {% content_for 'block', type: 'product-title', id: 'product-card-title', closest.product: product %}
  {% content_for 'block', type: 'price', id: 'product-card-price', closest.product: product %}

  {% comment %} Insert requested blocks immediately after title & price {% endcomment %}
  {% content_for 'block', type: 'product-card-variant-select', id: 'product-card-variant-select', closest.product: product %}
  {% content_for 'block', type: 'product-card-add-to-cart', id: 'product-card-add-to-cart', closest.product: product %}

  {% comment %} Render other supported product card blocks to preserve functionality {% endcomment %}
  {% content_for 'block', type: 'swatches', id: 'product-card-swatches', closest.product: product %}
  {% content_for 'block', type: 'review', id: 'product-card-review', closest.product: product %}
  {% content_for 'block', type: 'text', id: 'product-card-text', closest.product: product %}
  {% content_for 'block', type: 'image', id: 'product-card-image', closest.product: product %}
  {% content_for 'block', type: '_product-card-group', id: 'product-card-group', closest.product: product %}
  {% content_for 'block', type: 'product-card-variant-with-atc', id: 'product-card-variant-with-atc', closest.product: product %}
  {% content_for 'block', type: 'buy-buttons', id: 'product-card-buy-buttons', closest.product: product %}
  {% content_for 'block', type: 'custom-liquid', id: 'product-card-custom-liquid', closest.product: product %}
{% endcapture %}

{% render 'product-card', children: children, product: product %}

{% schema %}
{
  "name": "t:names.product_card",
  "blocks": [
    {
      "type": "_product-card-group"
    },
    {
      "type": "text"
    },
    {
      "type": "image"
    },
    {
      "type": "buy-buttons"
    },
    {
      "type": "price"
    },
    {
      "type": "review"
    },
    {
      "type": "swatches"
    },
    {
      "type": "_product-card-gallery"
    },
    {
      "type": "product-title"
    },
    {
      "type": "product-card-variant-select"
    },
    {
      "type": "product-card-add-to-cart"
    },
    {
      "type": "product-card-variant-with-atc"
    },
    {
      "type": "custom-liquid"
    },
    {
      "type": "_product-card-gallery"
    }
  ],
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "t:content.resource_reference_product_card"
    },
    {
      "type": "range",
      "id": "product_card_gap",
      "label": "t:settings.vertical_gap",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "checkbox",
      "id": "inherit_color_scheme",
      "label": "t:settings.inherit_color_scheme",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1",
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "header",
      "content": "t:content.borders"
    },
    {
      "type": "select",
      "id": "border",
      "label": "t:settings.style",
      "options": [
        {
          "value": "none",
          "label": "t:options.none"
        },
        {
          "value": "solid",
          "label": "t:options.solid"
        }
      ],
      "default": "none"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:settings.thickness",
      "default": 1,
      "visible_if": "{{ block.settings.border != 'none' }}"
    },
    {
      "type": "range",
      "id": "border_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:settings.opacity",
      "default": 100,
      "visible_if": "{{ block.settings.border != 'none' }}"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "t:settings.border_radius",
      "min": 0,
      "max": 32,
      "step": 1,
      "default": 0
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ]
}
{% endschema %}
