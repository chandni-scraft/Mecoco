{% assign block_settings = block.settings %}

{%- comment -%}
  Renders all FAQ rows added as child blocks to this tab.
{%- endcomment -%}

{% capture tab_rows %}
  {% content_for 'blocks' %}
{% endcapture %}

{% assign tab_rows_trimmed = tab_rows | strip %}

<div class="faq-tab-accordion" {{ block.shopify_attributes }}>
  <div class="accordion accordion--faq-tabs accordion--plus accordion--dividers">
    {% if tab_rows_trimmed != blank %}
      {{ tab_rows }}
    {% else %}
      <p class="faq-tabs__empty">Add FAQ Item blocks to this tab.</p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "FAQ Tab",
  "blocks": [
    { "type": "faq-accordion-row", "name": "FAQ Item" }
  ],
  "settings": [
    { "type": "text", "id": "label", "label": "Tab label", "default": "General" }
  ],
  "presets": [
    {
      "name": "FAQ Tab",
      "settings": { "label": "General" }
    }
  ]
}
{% endschema %}


