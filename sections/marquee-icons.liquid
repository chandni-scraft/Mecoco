<script
  src="{{ 'marquee.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

{%- liquid
  assign gap_between_elements = section.settings.gap_between_elements
-%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<marquee-component
  class="marquee-icons-section section spacing-style gap-style color-{{ section.settings.color_scheme }}"
  style="
    {%- render 'spacing-style', settings: section.settings %};
    {% render 'gap-style', value: gap_between_elements, name: 'marquee-gap' %}
    --marquee-direction: {{ section.settings.movement_direction }};
  "
  data-speed-factor="20"
  data-movement-direction="{{ section.settings.movement_direction }}"
>
  <div class="marquee-icons-container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="marquee-icons-header">
        {% if section.settings.subheading != blank %}
          <p class="marquee-icons-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h2 class="marquee-icons-heading">{{ section.settings.heading }}</h2>
        {% endif %}
      </div>
    {% endif %}

    <div class="marquee__wrapper" ref="wrapper">
      <div class="marquee__content" ref="content">
        <div class="marquee__repeated-items">
          {% for block in section.blocks %}
            <div class="marquee-icons-entry" {{ block.shopify_attributes }}>
              <div class="marquee-icons-item">
                {% if block.settings.image != blank %}
                  {% assign marquee_alt = block.settings.alt | default: block.settings.caption | escape %}
                  {{ block.settings.image | image_url: width: 300 | image_tag: alt: marquee_alt, loading: 'lazy' }}
                {% endif %}
              </div>
              {% if block.settings.caption != blank %}
                <div class="marquee-icons-caption">{{ block.settings.caption }}</div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</marquee-component>

<style>
  marquee-component {
    display: block;
    width: 100%;
    overflow: hidden;
  }

  .marquee__wrapper {
    display: flex;
    gap: var(--marquee-gap);
    width: fit-content;
    white-space: nowrap;
  }

  .marquee__content {
    min-width: max-content;
    display: flex;
    gap: var(--marquee-gap);
  }

  .marquee__repeated-items {
    min-width: max-content;
    display: flex;
    gap: var(--marquee-gap);
    align-items: center;
    justify-content: center;
  }

  @media (prefers-reduced-motion: no-preference) {
    marquee-component:not([data-disabled]) .marquee__wrapper {
      animation: marquee-motion var(--marquee-speed) linear infinite var(--marquee-direction);
    }
  }

  @keyframes marquee-motion {
    to {
      transform: translate3d(calc(-50% - (var(--marquee-gap) / 2)), 0, 0);
    }
  }

  .marquee-icons-section {
    padding-top: {{ section.settings.padding_block_start | default: 24 }}px;
    padding-bottom: {{ section.settings.padding_block_end | default: 24 }}px;
  }

  .marquee-icons-container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--page-padding);
  }

  .marquee-icons-header {
    text-align: center;
    margin-bottom: 32px;
  }

  .marquee-icons-subheading {
    font-size: 14px;
    font-weight: 500;
    color: {{ section.settings.subheading_color | default: 'var(--color-foreground)' }};
    margin: 0 0 8px 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .marquee-icons-heading {
    font-size: clamp(24px, 4vw, 36px);
    line-height: 1.2;
    margin: 0;
    color: {{ section.settings.heading_color | default: 'var(--color-foreground)' }};
  }

  .marquee-icons-entry {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .marquee-icons-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.icon_width | default: 120 }}px;
    height: {{ section.settings.icon_height | default: 60 }}px;
    overflow: hidden;
  }

  .marquee-icons-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: {{ section.settings.image_filter | default: 'none' }};
  }

  .marquee-icons-caption {
    margin-top: 8px;
    text-align: center;
    font-size: 14px;
    color: {{ section.settings.caption_color | default: 'var(--color-foreground)' }};
    line-height: 1.4;
  }

  @media screen and (max-width: 768px) {
    .marquee-icons-section {
      padding-top: {{ section.settings.padding_block_start_mobile | default: 16 }}px;
      padding-bottom: {{ section.settings.padding_block_end_mobile | default: 16 }}px;
    }

    .marquee-icons-item {
      width: {{ section.settings.icon_width_mobile | default: 100 }}px;
      height: {{ section.settings.icon_height_mobile | default: 50 }}px;
    }

    .marquee-icons-caption {
      font-size: 12px;
    }
  }
</style>

{% schema %}
{
  "name": "Marquee Icons",
  "tag": "section",
  "class": "section-marquee-icons",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "movement_direction",
      "label": "t:settings.motion_direction",
      "options": [
        { "value": "reverse", "label": "t:options.forward" },
        { "value": "normal", "label": "t:options.reverse" }
      ],
      "default": "normal"
    },
    {
      "type": "range",
      "id": "gap_between_elements",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "header",
      "content": "Icon Settings"
    },
    {
      "type": "range",
      "id": "icon_width",
      "label": "Icon Width (px)",
      "min": 0,
      "max": 300,
      "step": 5,
      "default": 120
    },
    {
      "type": "range",
      "id": "icon_height",
      "label": "Icon Height (px)",
      "min": 0,
      "max": 300,
      "step": 5,
      "default": 60
    },
    {
      "type": "range",
      "id": "icon_width_mobile",
      "label": "Icon Width Mobile (px)",
      "min": 0,
      "max": 300,
      "step": 5,
      "default": 100
    },
    {
      "type": "range",
      "id": "icon_height_mobile",
      "label": "Icon Height Mobile (px)",
      "min": 0,
      "max": 300,
      "step": 5,
      "default": 50
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "caption_color",
      "label": "Caption color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "image_filter",
      "label": "Image filter",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "grayscale(100%)",
          "label": "Grayscale"
        },
        {
          "value": "brightness(0.8)",
          "label": "Darker"
        },
        {
          "value": "brightness(1.2)",
          "label": "Brighter"
        }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding_block_start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_block_end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_block_start_mobile",
      "label": "Padding top (Mobile)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_block_end_mobile",
      "label": "Padding bottom (Mobile)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text",
          "info": "Optional: Image alt text for accessibility"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "info": "Optional: Text below the icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Icons",
      "blocks": [
        { "type": "icon" },
        { "type": "icon" },
        { "type": "icon" },
        { "type": "icon" },
        { "type": "icon" }
      ]
    }
  ]
}
{% endschema %}

