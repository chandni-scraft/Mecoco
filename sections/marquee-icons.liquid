<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
>
<script
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
  defer
></script>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const container = document.querySelector('.marquee-icons-swiper-{{ section.id }}');
  
  if (container) {
    container.classList.add('swiper');
    const wrapper = container.querySelector('.marquee-icons-wrapper');
    if (wrapper) {
      wrapper.classList.add('swiper-wrapper');
      wrapper.querySelectorAll('.marquee-icons-slide').forEach(slide => {
        slide.classList.add('swiper-slide');
      });

      new Swiper('.marquee-icons-swiper-{{ section.id }}', {
        slidesPerView: {{ section.settings.slides_per_view_mobile }},
        spaceBetween: {{ section.settings.space_between }},
        loop: true,
        speed: {{ section.settings.speed }},
        allowTouchMove: true,
        autoplay: {
          delay: {{ section.settings.autoplay_delay | default: 0 }},
          disableOnInteraction: false
        },
        freeMode: {{ section.settings.free_mode | default: true }},
        breakpoints: {
          768: {
            slidesPerView: {{ section.settings.slides_per_view_desktop }},
            spaceBetween: {{ section.settings.space_between }},
            allowTouchMove: {{ section.settings.allow_touch_desktop | default: false }}
          }
        },
        pagination: {
          el: '.marquee-icons-pagination-{{ section.id }}',
          clickable: true,
        }
      });
    }
  }
});
</script>

{%- liquid
  assign section_id = 'marquee-icons-' | append: section.id
-%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div 
  class="marquee-icons-section section spacing-style color-{{ section.settings.color_scheme }}"
  style="{%- render 'spacing-style', settings: section.settings %};"
>
  <div class="marquee-icons-container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="marquee-icons-header">
        {% if section.settings.subheading != blank %}
          <p class="marquee-icons-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h2 class="marquee-icons-heading">{{ section.settings.heading }}</h2>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="marquee-icons-swiper-{{ section.id }} overflow-visible">
        <div class="marquee-icons-wrapper">
          {% for block in section.blocks %}
            <div class="marquee-icons-slide" {{ block.shopify_attributes }}>
              <div class="marquee-icons-item">
                {% if block.settings.image != blank %}
                  {% assign marquee_alt = block.settings.alt | default: block.settings.caption | escape %}
                  {{ block.settings.image | image_url: width: 300 | image_tag: alt: marquee_alt, loading: 'lazy' }}
                {% endif %}
              </div>
              {% if block.settings.caption != blank %}
                <div class="marquee-icons-caption">{{ block.settings.caption }}</div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
        {% if section.settings.pagination %}
          <div class="marquee-icons-pagination-{{ section.id }}"></div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .marquee-icons-section {
    width: 100%;
    padding-top: {{ section.settings.padding_block_start | default: 24 }}px;
    padding-bottom: {{ section.settings.padding_block_end | default: 24 }}px;
  }

  .marquee-icons-container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--page-padding);
  }

  .marquee-icons-header {
    text-align: center;
    margin-bottom: 32px;
  }

  .marquee-icons-subheading {
    font-size: 14px;
    font-weight: 500;
    color: {{ section.settings.subheading_color | default: 'var(--color-foreground)' }};
    margin: 0 0 8px 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .marquee-icons-heading {
    font-size: clamp(24px, 4vw, 36px);
    line-height: 1.2;
    margin: 0;
    color: {{ section.settings.heading_color | default: 'var(--color-foreground)' }};
  }

  .marquee-icons-wrapper {
    display: flex;
    align-items: center;
  }

  .marquee-icons-slide {
    margin: 0 !important;
    padding: 0 !important;
    width: auto !important;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .marquee-icons-item {
    display: flex !important;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.icon_width | default: 120 }}px;
    height: {{ section.settings.icon_height | default: 60 }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .marquee-icons-item:hover {
    transform: scale(1.05);
  }

  .marquee-icons-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: {{ section.settings.image_filter | default: 'none' }};
  }

  .marquee-icons-caption {
    margin-top: 8px;
    text-align: center;
    font-size: 14px;
    color: {{ section.settings.caption_color | default: 'var(--color-foreground)' }};
    line-height: 1.4;
  }

  .marquee-icons-pagination-{{ section.id }} {
    display: {% if section.settings.pagination %}block{% else %}none{% endif %};
    margin-top: 24px;
    text-align: center;
    position: relative;
  }

  .marquee-icons-pagination-{{ section.id }} .swiper-pagination-bullet {
    width: 8px;
    height: 8px;
    background: var(--color-foreground);
    opacity: 0.3;
    margin: 0 4px;
    border-radius: 50%;
    transition: opacity 0.3s ease;
  }

  .marquee-icons-pagination-{{ section.id }} .swiper-pagination-bullet-active {
    opacity: 1;
    background: {{ section.settings.pagination_active_color | default: 'var(--color-foreground)' }};
  }

  @media screen and (max-width: 768px) {
    .marquee-icons-section {
      padding-top: {{ section.settings.padding_block_start_mobile | default: 16 }}px;
      padding-bottom: {{ section.settings.padding_block_end_mobile | default: 16 }}px;
    }

    .marquee-icons-header {
      margin-bottom: 24px;
    }

    .marquee-icons-item {
      width: {{ section.settings.icon_width_mobile | default: 100 }}px;
      height: {{ section.settings.icon_height_mobile | default: 50 }}px;
    }

    .marquee-icons-caption {
      font-size: 12px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .marquee-icons-item {
      transition: none;
    }
  }
</style>

